<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/X_Add"
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:text="+"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></Button>

    <Button
        android:id="@+id/X_Minus"
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:text="-"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/X_Add"></Button>

    <Button
        android:id="@+id/Y_Add"
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:text="+"
        android:textSize="25dp"
        app:layout_constraintStart_toEndOf="@+id/X_Add"
        app:layout_constraintTop_toTopOf="parent"></Button>

    <Button
        android:id="@+id/Y_Minus"
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:text="-"
        android:textSize="25dp"
        app:layout_constraintStart_toEndOf="@+id/X_Minus"
        app:layout_constraintTop_toBottomOf="@+id/Y_Add"></Button>

    <Button
        android:id="@+id/Z_Add"
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:text="+"
        android:textSize="25dp"
        app:layout_constraintStart_toEndOf="@+id/Y_Add"
        app:layout_constraintTop_toTopOf="parent"></Button>

    <Button
        android:id="@+id/Z_Minus"
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:text="-"
        android:textSize="25dp"
        app:layout_constraintStart_toEndOf="@+id/Y_Minus"
        app:layout_constraintTop_toBottomOf="@+id/Z_Add"></Button>

</androidx.constraintlayout.widget.ConstraintLayout>