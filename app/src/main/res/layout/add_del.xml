<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="57dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="ADD"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <Button
        android:id="@+id/ADD_elem"
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:text="+"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="@+id/DEL_elem"
        app:layout_constraintTop_toBottomOf="@+id/textView2"></Button>

    <Button
        android:id="@+id/DEL_elem"
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:text="-"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ADD_elem"></Button>

</androidx.constraintlayout.widget.ConstraintLayout>