<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/ImageX"
        android:layout_width="57dp"
        android:layout_height="wrap_content"
        android:text="X"
        android:textSize="20dp"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <TextView
        android:id="@+id/ImageY"
        android:layout_width="57dp"
        android:layout_height="wrap_content"
        android:text="Y"
        android:textSize="20dp"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/ImageX"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <TextView
        android:id="@+id/ImageZ"
        android:layout_width="57dp"
        android:layout_height="wrap_content"
        android:text="Z"
        android:textSize="20dp"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/ImageY"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <Button
        android:id="@+id/X_Add"
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:text="+"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ImageX"></Button>

    <Button
        android:id="@+id/X_Minus"
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:text="-"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/X_Add"></Button>

    <Button
        android:id="@+id/Y_Add"
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:text="+"
        android:textSize="25dp"
        app:layout_constraintStart_toEndOf="@+id/X_Add"
        app:layout_constraintTop_toBottomOf="@+id/ImageY"></Button>

    <Button
        android:id="@+id/Y_Minus"
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:text="-"
        android:textSize="25dp"
        app:layout_constraintStart_toEndOf="@+id/X_Minus"
        app:layout_constraintTop_toBottomOf="@+id/Y_Add"></Button>

    <Button
        android:id="@+id/Z_Add"
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:text="+"
        android:textSize="25dp"
        app:layout_constraintStart_toEndOf="@+id/Y_Add"
        app:layout_constraintTop_toBottomOf="@+id/ImageZ"></Button>

    <Button
        android:id="@+id/Z_Minus"
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:text="-"
        android:textSize="25dp"
        app:layout_constraintStart_toEndOf="@+id/Y_Minus"
        app:layout_constraintTop_toBottomOf="@+id/Z_Add"></Button>

</androidx.constraintlayout.widget.ConstraintLayout>